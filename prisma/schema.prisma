generator client {
  provider = "prisma-client-js"
    binaryTargets = ["native", "windows"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  urls      Url[]

  @@map("users")
}

model Url {
  id           String   @id @default(cuid())
  originalUrl  String
  shortCode    String   @unique
  clicks       Int      @default(0)
  uniqueClicks Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  userId       String

  // Optional fields for QR and custom domain
  customDomain String?
  qrCodeUrl    String?
  title        String?
  tags         String? // JSON string for tags

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  clickEvents  ClickEvent[]

  @@map("urls")
}

model ClickEvent {
  id          String   @id @default(cuid())
  timestamp   DateTime @default(now())
  ipAddress   String
  userAgent   String?
  country     String?
  city        String?
  device      String?
  browser     String?
  os          String?
  referrer    String?
  urlId       String

  url         Url      @relation(fields: [urlId], references: [id], onDelete: Cascade)

  @@map("click_events")
}
